{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    
    "paths": {
      "@/api/*": ["./api/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": ["**/*.ts"],
}